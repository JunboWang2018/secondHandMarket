<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>发布求购信息</title>
    <script type="text/javascript" src="/secondhandmarket/js/jquery-3.3.1.min.js" ></script>
    <link rel="stylesheet" href="/secondhandmarket/css/bootstrap.min.css" />
    <script type="text/javascript" src="/secondhandmarket/js/bootstrap.min.js" ></script>
    <script type="text/javascript" src="/secondhandmarket/js/release.js"></script>
    <style type="text/css">
        .input-group{
            width: 438px;
            margin-right: 30px;
        }
    </style>
    <script>
        $(document).ready(function() {

        });
    </script>
</head>
<body>
<jsp:include page="header.jsp"/>
<div class="container-fluid" style="margin-left: 650px;">
    <div class="col-md-5">
        <div
                style="width: 500px; border: 1px solid #E7E7E7; padding: 20px 0 20px 30px; border-radius: 5px; margin-top:; background: #fff;">
            <font style="margin-left: 170px;" size="4">求购信息</font>
            <div>&nbsp;</div>
            <div class="input-group">

                <span class="input-group-addon" style="width: 120px;">求购物品名称</span>
                <input id="requirement_name" type="text" class="form-control" placeholder="请输入求购物品名称">
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-addon" style="width: 120px;">分类</span>
                <select id="requirement_type" class="form-control">
                    <option>请选择物品分类</option>
                    <option value="FURN">家具</option>
                    <option value="ELAP">电器</option>
                    <option value="DGTL">数码</option>
                    <option value="TSPT">交通工具</option>
                    <option value="HDWR">五金器具</option>
                    <option value="DCRT">装饰摆件</option>
                    <option value="CLTB">服饰包具</option>
                    <option value="TCKT">点券</option>
                    <option value="DGTP">数字商品</option>
                </select>
            </div>
            <br>

            <div class="input-group">
                <span class="input-group-addon" style="width: 120px;">折旧率要求</span>
                <input id="requirement_depreciation_rate" type="text" class="form-control" placeholder="请输入0~1的数字">
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-addon" style="width: 120px;">数量要求</span>
                <input id="requirement_quantity" type="" class="form-control" placeholder="请输入数量要求">
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-addon" style="width: 120px;">价格要求</span>
                <input id="requirement_price" type="" class="form-control" placeholder="请输入价格要求">
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-addon" style="width: 120px;">其它要求</span>
                <input id="requirement_other" type="" class="form-control" placeholder="请输入其它要求">
            </div>
            <br>
            <div style="margin-left: 160px;">
                <button id="release_requirement" type="button" class="btn btn-primary" >发布求购</button>
            </div>
        </div>
    </div>


</body>
</html>

